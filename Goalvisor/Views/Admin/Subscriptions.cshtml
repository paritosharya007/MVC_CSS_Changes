@{ ViewData["Title"] = "Manage Subscriptions";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<div>
    <div class="float-left">
        <h1>Manage Subscriptions</h1>
    </div>
    <div class="clearfix" style="width:100%"></div>
</div>
<div>
    <table id="subsDT" class="table table-bordered table-hover dataTable" style="width:100%">
        <thead>
            <tr>
                <td style="width:20%">Package Name</td>
                <td style="width:20%">Username</td>
                <td style="width:15%">Duration</td>
                <td style="width:10%">Start Date</td>
                <td style="width:10%">End Date</td>
                <td style="width:10%">Active</td>
                <td style="width:15%">Actions</td>
            </tr>
        </thead>
        <tbody>
        </tbody>
    </table>
</div>

@section Scripts{
    <script>let table = {};
        $(document).ready(function () {
            table = $('#subsDT').DataTable({
                "searchable": true,
                "bDestroy": true,
                "ordering": true,
                "serverSide": true,
                responsive: true,
                processing: true,
                sortable: true,
                ajax: {
                    "url": "/Subscriptions/PageData",
                    "type": "POST"
                },
                columns: [
                    {
                        name: 'Package Name',
                        data: 'packageName',
                        title: "Package Name",
                        sortable: true,
                    },
                    {
                        name: 'Username',
                        data: 'userName',
                        title: "Username",
                        sortable: true,
                    },
                    {
                        name: 'Duration',
                        data: 'duration',
                        title: "Duration",
                        sortable: true,
                    },
                    {
                        name: 'Start Date',
                        data: null,
                        title: "Start Date",
                        sortable: true,
                        render: function (data, type, full, meta) {
                            return renderSimpleDate(full.startDate);
                        }
                    },
                    {
                        name: 'End Date',
                        data: null,
                        title: "End Date",
                        sortable: true,
                        render: function (data, type, full, meta) {
                            return renderSimpleDate(full.endDate);
                        }
                    },
                    {
                        name: 'Active',
                        data: null,
                        title: "Active",
                        sortable: true,
                        render: function (data, type, full, meta) {
                            if (full.active) {
                                return "Active";
                            } else {
                                return "Inactive";
                            }
                        }
                    },
                    {
                        name: 'Action',
                        data: null,
                        targets: -1,
                        sortable: false,
                        title: 'Action',
                        searchable: false,
                        "render": function (data, type, full, meta) {
                            return generateActionButtons(full);
                        }
                    }
                ]
            });
        });

        function generateActionButtons(full) {
            let btns =
                '<div class="dropdown">' +
                '<button class="btn btn-primary btn-sm dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">' +
                'Actions' +
                '</button>' +
                '<div class="dropdown-menu" aria-labelledby="dropdownMenuButton">' +
                '<a class="dropdown-item" onclick="edit(\'' + full.id + '\')" href="#">Edit</a>' +
                '<a class="dropdown-item" onclick="remove(\'' + full.id + '\')" href="#">Remove</a>' +
                '</div>' +
                '</div>';
            return btns;
        }

        function edit(subscirptionId) {
            var modalSelector = GetLoaderModal(80);
            $(modalSelector).modal();

            $(modalSelector + "-content").load("/Subscriptions/Edit/" + subscirptionId,
                function (response, status, xhr) {
                }
            );
        }

        function remove(subscriptionId) {
            Swal.fire({
                title: 'Are you sure?',
                text: "Removing a subscription is permanent.",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, delete!'
            }).then((result) => {
                if (result.value) {
                    $.ajax({
                        url: "/Subscriptions/Remove/" + subscriptionId,
                        method: "POST",
                    }).done(function (data) {
                        if (data.success) {
                            notifySucess(data.message);
                            table.draw();
                        } else {
                            notifyError(data.message);
                        }
                    });
                }
            });

        }</script>

}