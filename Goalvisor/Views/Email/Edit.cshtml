@model Goalvisor.Models.EmailTemplate

@{ ViewData["Title"] = "Email Template"; }
<div class="card-header">

    @{ if (Model.Id == 0)
        {
<h2>Create new template</h2> }
else
{
<h2>Edit Template - #@Model.Id</h2> } }
</div>
<form method="post" asp-action="AddOrUpdate" asp-controller="Email">
    <div class="form-group">
        <label for="TemplateName">Template Name</label>
        <input type="hidden" class="form-control" id="Id" hidden asp-for="@Model.Id">
        <input type="text" class="form-control" id="TemplateName" placeholder="TemplateName" asp-for="@Model.TemplateName">
    </div>
    <div class="form-group">
        <label for="Subject">Subject</label>
        <input type="text" class="form-control" id="Subject" placeholder="Subject" asp-for="@Model.Subject">
    </div>
    <div class="form-group">
        <label for="Body">Body</label>
        <textarea id="Body" class="form-control input-lg textarea-editor" rows="10" asp-for="@Model.Body"></textarea>
    </div>
</form>
<button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save</button>

@section Scripts{
    <script>$(document).ready(function () {
            $('#spinner').hide();
        });</script>
}